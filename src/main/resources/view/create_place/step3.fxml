<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.phuongkhanh.youmetrips.presentation.controls.TrekkingPlacePane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import com.jfoenix.controls.JFXListView?>
<TrekkingPlacePane step="3" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <trekkingPlaceNodes>
        <VBox alignment="TOP_CENTER" minHeight="410" prefWidth="284.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <Label text="How does the place looks like?" textFill="#828282" />
                <AnchorPane>
                    <children>
                        <JFXButton fx:id="_btnAddPhotos" onMouseClicked="#onAddImage" prefHeight="38.0" prefWidth="90.0" ripplerFill="#ffffff42" style="-fx-background-radius: 100; -fx-border-radius: 100; -fx-border-color: #1a535c;" text="ADD PHOTOS" textFill="#1a535c" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </JFXButton>
                    </children>
                    <VBox.margin>
                        <Insets top="24.0" />
                    </VBox.margin>
                </AnchorPane>
                <JFXListView fx:id="_listView" minHeight="320" style="-fx-background-color: trasparent;">
                    <VBox.margin>
                        <Insets top="24.0" />
                    </VBox.margin>
                </JFXListView>
            </children>
        </VBox>
        <VBox alignment="CENTER">
            <JFXButton fx:id="_btnNext" disable="true" onMouseClicked="#onNavigateToHashtags" minHeight="40.0" prefWidth="90.0"
                       ripplerFill="#ffffff42"  style="-fx-background-color: #1a535c; -fx-background-radius: 100;"
                       text="Next" textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets>
                        <top>10</top>
                    </Insets>
                </VBox.margin>
            </JFXButton>
        </VBox>
    </trekkingPlaceNodes>
</TrekkingPlacePane>
