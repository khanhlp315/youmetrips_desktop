<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.phuongkhanh.youmetrips.presentation.controls.TrekkingPlacePane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>
<?import com.lynden.gmapsfx.GoogleMapView?>
<TrekkingPlacePane step="2" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <trekkingPlaceNodes>
        <VBox alignment="TOP_CENTER" minHeight="70" prefWidth="284.0" >
            <children>
                <Label text="Where is this place located?" textFill="#828282"/>
                <Label fx:id="_tfPlace" text="Location">
                    <padding>
                        <Insets left="64.0" right="64.0" top="24.0"/>
                    </padding>
                </Label>
            </children>
        </VBox>
        <VBox alignment="CENTER" minHeight="340.0" minWidth="200.0">
            <GoogleMapView fx:id="_ggMaps" minHeight="340.0" minWidth="200.0"/>
        </VBox>
        <VBox alignment="CENTER">
            <JFXButton fx:id="_btnNext" disable="true" onMouseClicked="#onNavigateToPhotos" minHeight="40.0"
                       prefWidth="90.0"
                       ripplerFill="#ffffff42" style="-fx-background-color: #1a535c; -fx-background-radius: 100;"
                       text="Next" textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets>
                        <top>10</top>
                    </Insets>
                </VBox.margin>
            </JFXButton>
        </VBox>
    </trekkingPlaceNodes>
</TrekkingPlacePane>
