<TrekkingPlanPane step="1" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <trekkingPlanNodes>
        <VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <Label text="Where are you going?" textFill="#828282" />
                <JFXComboBox fx:id="_cbChoosePlace" focusColor="#ffba33" labelFloat="false" prefHeight="40.0" prefWidth="350.0" promptText="A place, a city or a country" unFocusColor="#ccd0d2">
                    <padding>
                        <Insets left="64.0" right="64.0" top="24.0" />
                    </padding>
                </JFXComboBox>
                <AnchorPane fx:id="_apPlaceImage1">
                    <children>
                        <StackPane alignment="TOP_CENTER" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0">
                            <children>
                                <Text fx:id="_txtPlace1" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Place">
                                    <StackPane.margin>
                                        <Insets top="8.0" />
                                    </StackPane.margin>
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Text>
                            </children>
                        </StackPane>
                        <Rectangle fill="WHITE" height="2.0" layoutY="81.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="268.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>
        <VBox alignment="CENTER">
            <JFXButton fx:id="_btnNext" disable="true" onMouseClicked="#onNavigateToTime" minHeight="40.0" prefWidth="90.0"
                       ripplerFill="#ffffff42"  style="-fx-background-color: #1a535c; -fx-background-radius: 100;"
                       text="Next" textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets>
                        <top>10</top>
                    </Insets>
                </VBox.margin>
            </JFXButton>
        </VBox>
    </trekkingPlanNodes>
</TrekkingPlanPane>
