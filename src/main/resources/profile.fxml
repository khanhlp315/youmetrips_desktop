<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" hbarPolicy="NEVER" stylesheets="@style/customScrollPane.css"
            xmlns="http://javafx.com/javafx/8.0.141">
    <content>
        <AnchorPane>
            <children>
                <ImageView fitHeight="150.0" fitWidth="410.0" preserveRatio="true">
                    <image>
                        <Image url="@images/no_cover.png"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="155.0" layoutY="116.0" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, #00000042, 3, 0, 0, 3);">
                    <image>
                        <Image url="@images/img_placeholder.png"/>
                    </image>
                </ImageView>
                <GridPane layoutX="110.0" layoutY="245.0" vgap="20.0" AnchorPane.bottomAnchor="16.0"
                          AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="245.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <JFXTextField fx:id="_tfEmailOrPhone" focusColor="#ffba33" labelFloat="true" prefHeight="31.0"
                                      prefWidth="190.0" promptText="Email or Phone" unFocusColor="#ccd0d2"/>
                        <JFXPasswordField fx:id="_pfPassword" focusColor="#ffba33" labelFloat="true" prefHeight="31.0"
                                          prefWidth="190.0" promptText="Password" unFocusColor="#ccd0d2"
                                          GridPane.rowIndex="1"/>
                        <JFXPasswordField fx:id="_pfConfirmPassword" focusColor="#ffba33" labelFloat="true"
                                          prefHeight="31.0" prefWidth="190.0" promptText="Confirm Password"
                                          unFocusColor="#ccd0d2" GridPane.rowIndex="2"/>
                        <JFXTextField fx:id="_tfFirstName" focusColor="#ffba33" labelFloat="true" prefHeight="31.0"
                                      prefWidth="99.0" promptText="First Name" unFocusColor="#ccd0d2"
                                      GridPane.rowIndex="3"/>
                        <JFXTextField fx:id="_tfLastName" focusColor="#ffba33" labelFloat="true" prefHeight="31.0"
                                      prefWidth="71.0" promptText="Last Name" unFocusColor="#ccd0d2"
                                      GridPane.rowIndex="4"/>
                        <JFXButton fx:id="_btnCreateAccount" prefHeight="38.0" prefWidth="190.0" ripplerFill="#ffffff42"
                                   style="-fx-background-color: #1a535c; -fx-background-radius: 100;"
                                   text="CREATE ACCOUNT" textFill="WHITE" GridPane.halignment="CENTER"
                                   GridPane.rowIndex="5">
                            <font>
                                <Font size="10.0"/>
                            </font>
                        </JFXButton>
                    </children>
                </GridPane>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
