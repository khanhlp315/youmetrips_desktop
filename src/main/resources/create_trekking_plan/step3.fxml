<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefWidth="284.0" xmlns="http://javafx.com/javafx/8.0.141">
    <children>
        <Label text="How long will you stay there?" textFill="#828282"/>
        <JFXComboBox fx:id="_cbFrom" focusColor="#ffc146" prefWidth="284.0" promptText="From" unFocusColor="#ccd0d2">
            <padding>
                <Insets top="24.0"/>
            </padding>
            <VBox.margin>
                <Insets left="64.0" right="64.0"/>
            </VBox.margin>
        </JFXComboBox>
        <JFXComboBox fx:id="_cbTo" focusColor="#ffc146" prefWidth="284.0" promptText="To" unFocusColor="#ccd0d2">
            <padding>
                <Insets top="24.0"/>
            </padding>
            <VBox.margin>
                <Insets left="64.0" right="64.0"/>
            </VBox.margin>
        </JFXComboBox>
        <JFXButton fx:id="_btnNext" prefHeight="38.0" prefWidth="190.0" ripplerFill="#ffffff42"
                   style="-fx-background-color: #1a535c; -fx-background-radius: 100;" text="NEXT" textFill="WHITE"
                   visible="false">
            <font>
                <Font size="10.0"/>
            </font>
            <padding>
                <Insets bottom="8.0" top="8.0"/>
            </padding>
            <VBox.margin>
                <Insets top="16.0"/>
            </VBox.margin>
        </JFXButton>
    </children>
</VBox>
